<Window x:Class="Project_Prn212.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Prn212"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#EEEEEE">
        <Border Background="White" Width="300" Height="249" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <Label Content="Username:" FontSize="16" Padding="10"/>
                <TextBox x:Name="txtUsername" Width="220" FontSize="14" Padding="5"/>
                <Label Content="Password:" FontSize="16" Padding="10"/>
                <PasswordBox x:Name="txtPassword" Width="220" FontSize="14" Padding="5"/>
                <Button Content="Login" Margin="10,10,10,30" Width="84" Height="29" Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.55,0.343" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
